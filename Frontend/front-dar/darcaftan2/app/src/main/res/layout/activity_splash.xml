<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:padding="24dp">

        <!-- Logo -->
        <ImageView
            android:id="@+id/splashLogo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo_caftan"
            android:contentDescription="Logo Dar Al Kaftan"
            android:visibility="invisible"
            android:layout_marginBottom="16dp"/>

        <!-- Titre -->
        <TextView
            android:id="@+id/splashTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DAR AL KAFTAN"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@color/primary_gold"
            android:visibility="invisible"
            android:layout_marginBottom="8dp"/>

        <!-- Ligne décorative -->
        <View
            android:id="@+id/splashLine"
            android:layout_width="100dp"
            android:layout_height="3dp"
            android:background="@color/primary_gold"
            android:visibility="invisible"
            android:layout_marginBottom="8dp"/>

        <!-- Sous-titre -->
        <TextView
            android:id="@+id/splashSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Haute Couture Marocaine"
            android:textSize="18sp"
            android:textStyle="italic"
            android:textColor="@color/text_dark"
            android:visibility="invisible"
            android:layout_marginBottom="4dp"/>

        <!-- Tagline -->
        <TextView
            android:id="@+id/splashTagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="L'art de l'élégance intemporelle"
            android:textSize="16sp"
            android:textColor="@color/text_medium"
            android:visibility="invisible"/>
    </LinearLayout>

</RelativeLayout>
