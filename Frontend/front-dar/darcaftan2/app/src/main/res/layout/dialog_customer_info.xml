<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_cream"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Titre du dialog -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Informations de livraison"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Sous-titre -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Veuillez remplir vos informations pour finaliser votre commande"
            android:textSize="14sp"
            android:textColor="@color/text_medium"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Champ Nom complet -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nom complet *"
            android:textSize="16sp"
            android:textColor="@color/text_dark"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edit_nom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:hint="Entrez votre nom complet"
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@color/white"
            android:elevation="2dp"
            android:layout_marginBottom="16dp" />

        <!-- Champ Email -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email *"
            android:textSize="16sp"
            android:textColor="@color/text_dark"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edit_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:hint="exemple@email.com"
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@color/white"
            android:elevation="2dp"
            android:layout_marginBottom="16dp" />

        <!-- Champ Téléphone -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Téléphone *"
            android:textSize="16sp"
            android:textColor="@color/text_dark"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edit_telephone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="phone"
            android:hint="0612345678"
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@color/white"
            android:elevation="2dp"
            android:layout_marginBottom="16dp" />

        <!-- Champ Adresse -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adresse complète *"
            android:textSize="16sp"
            android:textColor="@color/text_dark"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edit_adresse"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:inputType="textMultiLine|textCapSentences"
            android:hint="Numéro, rue, ville, code postal"
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:background="@color/white"
            android:elevation="2dp"
            android:gravity="top|start"
            android:lines="4"
            android:maxLines="4"
            android:layout_marginBottom="24dp" />

        <!-- Note champs obligatoires -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* Tous les champs sont obligatoires"
            android:textSize="12sp"
            android:textColor="@color/text_gray"
            android:textStyle="italic"
            android:layout_marginBottom="24dp" />

        <!-- Boutons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btn_annuler"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Annuler"
                android:textColor="@color/text_medium"
                android:background="@android:color/transparent"
                android:layout_marginEnd="16dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp" />

            <Button
                android:id="@+id/btn_confirmer_commande"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Confirmer la commande"
                android:textColor="@color/white"
                android:background="@color/primary_gold"
                android:elevation="4dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
