<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_cream"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Bouton retour -->
        <ImageButton
            android:id="@+id/btn_retour"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/fleche"
            android:contentDescription="Retour"
            android:layout_marginBottom="16dp" />

        <!-- Logo et titre -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/logo_caftan"
                android:contentDescription="Logo Dar Al Kaftan"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DAR CAFTAN"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:layout_marginTop="12dp" />

            <View
                android:layout_width="80dp"
                android:layout_height="2dp"
                android:background="@color/primary_gold"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Titre Collection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Collection Broderie"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:fontFamily="serif"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Collections · Broderie"
            android:textSize="12sp"
            android:textColor="@color/text_gray"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Une collection dédiée à l'art de la broderie traditionnelle marocaine. Nos maîtres artisans perpétuent des techniques séculaires pour créer des motifs d'une finesse exceptionnelle, alliant motifs géométriques et floraux dans un style authentique."
            android:textSize="16sp"
            android:textColor="@color/text_dark"
            android:lineSpacingExtra="6dp"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Grille de caftans broderie -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="280dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:background="@color/white"
                android:elevation="4dp">

                <ImageView
                    android:id="@+id/img_brod1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/caftan1"
                    android:scaleType="centerCrop"
                    android:contentDescription="Caftan broderie 1" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="280dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:background="@color/white"
                android:elevation="4dp">

                <ImageView
                    android:id="@+id/img_brod2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/caftan2"
                    android:scaleType="centerCrop"
                    android:contentDescription="Caftan broderie 2" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="280dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:background="@color/white"
                android:elevation="4dp">

                <ImageView
                    android:id="@+id/img_brod3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/caftan3"
                    android:scaleType="centerCrop"
                    android:contentDescription="Caftan broderie 3" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="280dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:background="@color/white"
                android:elevation="4dp">

                <ImageView
                    android:id="@+id/img_brod4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/caftan4"
                    android:scaleType="centerCrop"
                    android:contentDescription="Caftan broderie 4" />
            </FrameLayout>
        </LinearLayout>

        <!-- Section Contact -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/primary_gold"
            android:padding="24dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Artisanat d'Exception"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chaque broderie est réalisée à la main par nos maîtres artisans. Découvrez nos techniques traditionnelles."
                android:textSize="15sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:lineSpacingExtra="4dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
