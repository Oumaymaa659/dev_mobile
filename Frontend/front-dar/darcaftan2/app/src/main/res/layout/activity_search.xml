<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_cream"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Bouton retour -->
        <ImageButton
            android:id="@+id/btn_retour"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/fleche"
            android:contentDescription="Retour"
            android:layout_marginBottom="16dp" />

        <!-- Logo et titre -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/logo_caftan"
                android:contentDescription="Logo Dar Al Kaftan"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DAR CAFTAN"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:layout_marginTop="12dp" />

            <View
                android:layout_width="80dp"
                android:layout_height="2dp"
                android:background="@color/primary_gold"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- ⭐ Barre de recherche -->
        <SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/search_background_gold"
            android:queryHint="Rechercher un caftan..."
            android:iconifiedByDefault="false"
            android:layout_marginBottom="24dp" />

        <!-- Résultats de recherche -->
        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/primary_gold"
            android:dividerHeight="1dp"
            android:layout_marginBottom="32dp" />

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Une collection d'exception inspirée de la royauté marocaine. Des caftans somptueux aux finitions précieuses, créés avec les matières les plus nobles et les techniques les plus raffinées. Chaque pièce incarne le luxe et la grandeur de la tradition marocaine."
            android:textSize="16sp"
            android:textColor="@color/text_dark"
            android:lineSpacingExtra="6dp"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

    </LinearLayout>

</ScrollView>
