<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Photo du caftan -->
        <ImageView
            android:id="@+id/image_caftan_photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:background="#E0E0E0"
            android:visibility="gone"/>

        <!-- Informations du caftan -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_caftan_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom du caftan"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#212121"/>

            <TextView
                android:id="@+id/text_caftan_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prix: 1500 DH"
                android:textSize="14sp"
                android:textColor="#43A047"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/text_caftan_collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Collection: Mariage"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Bouton Supprimer -->
        <Button
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Supprimer"
            android:backgroundTint="#D32F2F"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:padding="8dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
