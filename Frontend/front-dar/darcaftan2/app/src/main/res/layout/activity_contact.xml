<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_cream"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Bouton retour -->
        <ImageButton
            android:id="@+id/btn_retour"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:contentDescription="Retour"
            android:src="@drawable/fleche"
            android:layout_marginBottom="16dp" />

        <!-- Logo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/logo_caftan"
                android:contentDescription="Logo Dar Al Kaftan"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DAR AL KAFTAN"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Titre principal -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contactez-nous"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:fontFamily="serif"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Sous-titre -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Domicile · Contact"
            android:textSize="12sp"
            android:textColor="@color/text_gray"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Section Introduction -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nous serions ravis de vous accueillir dans notre atelier ou de répondre à toutes vos questions. N'hésitez pas à nous contacter !"
            android:textSize="16sp"
            android:textColor="@color/text_dark"
            android:lineSpacingExtra="6dp"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Carte de contact principale -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="20dp"
            android:elevation="4dp"
            android:layout_marginBottom="24dp">

            <!-- Adresse -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="20dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_location"
                    android:contentDescription="Adresse"
                    android:tint="@color/primary_gold"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adresse"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_gold"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rue Bab Doukkala, Quartier Guéliz\nMarrakech, Maroc"
                        android:textSize="15sp"
                        android:textColor="@color/text_medium"
                        android:lineSpacingExtra="2dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Séparateur -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="20dp"/>

            <!-- Téléphone -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="20dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_phone"
                    android:contentDescription="Téléphone"
                    android:tint="@color/primary_gold"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Téléphone"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_gold"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+212 6 45 78 96 32"
                        android:textSize="15sp"
                        android:textColor="@color/text_medium"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Séparateur -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="20dp"/>

            <!-- Email -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="20dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_email"
                    android:contentDescription="Email"
                    android:tint="@color/primary_gold"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_gold"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="contact@darcaftan.ma"
                        android:textSize="15sp"
                        android:textColor="@color/text_medium"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Séparateur -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="20dp"/>

            <!-- Horaires -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_clock"
                    android:contentDescription="Horaires"
                    android:tint="@color/primary_gold"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Horaires d'ouverture"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_gold"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lundi - Samedi : 9h00 - 19h00\nDimanche : Sur rendez-vous"
                        android:textSize="15sp"
                        android:textColor="@color/text_medium"
                        android:lineSpacingExtra="2dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Section Réseaux sociaux -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="20dp"
            android:elevation="4dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_social"
                    android:contentDescription="Réseaux sociaux"
                    android:tint="@color/primary_gold"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="Suivez-nous"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_gold"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Instagram : @dar_caftan\nFacebook : Dar Caftan Officiel\nPinterest : Dar Al Kaftan Marrakech"
                android:textSize="15sp"
                android:textColor="@color/text_medium"
                android:lineSpacingExtra="4dp"
                android:paddingStart="48dp"/>
        </LinearLayout>

        <!-- Section Visite de l'atelier -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/primary_gold"
            android:padding="24dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Visitez Notre Atelier"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nous vous invitons à découvrir notre savoir-faire artisanal et nos créations exclusives. Les visites de l'atelier sont possibles sur rendez-vous."
                android:textSize="15sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:lineSpacingExtra="4dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
