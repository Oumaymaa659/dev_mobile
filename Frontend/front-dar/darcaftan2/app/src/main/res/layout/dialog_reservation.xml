<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/background_cream">

    <!-- Titre du dialog -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Réservation"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/text_dark"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Nom du caftan -->
    <TextView
        android:id="@+id/txt_caftan_nom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Caftan Mariage Élégant"
        android:textSize="18sp"
        android:textColor="@color/primary_gold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Champ Quantité -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quantité"
        android:textSize="16sp"
        android:textColor="@color/text_dark"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/edit_quantite"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="number"
        android:hint="Entrez la quantité"
        android:textSize="16sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@color/white"
        android:elevation="2dp"
        android:layout_marginBottom="16dp" />

    <!-- Champ Date de début -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date de début"
        android:textSize="16sp"
        android:textColor="@color/text_dark"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/edit_date_debut"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Sélectionnez la date de début"
        android:textSize="16sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@color/white"
        android:elevation="2dp"
        android:focusable="false"
        android:clickable="true"
        android:drawableEnd="@android:drawable/ic_menu_my_calendar"
        android:layout_marginBottom="16dp" />

    <!-- Champ Date de fin -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date de fin"
        android:textSize="16sp"
        android:textColor="@color/text_dark"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/edit_date_fin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Sélectionnez la date de fin"
        android:textSize="16sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@color/white"
        android:elevation="2dp"
        android:focusable="false"
        android:clickable="true"
        android:drawableEnd="@android:drawable/ic_menu_my_calendar"
        android:layout_marginBottom="24dp" />

    <!-- Boutons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btn_annuler"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Annuler"
            android:textColor="@color/text_medium"
            android:background="@android:color/transparent"
            android:layout_marginEnd="16dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp" />

        <Button
            android:id="@+id/btn_confirmer"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Confirmer"
            android:textColor="@color/white"
            android:background="@color/primary_gold"
            android:elevation="4dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp" />
    </LinearLayout>

</LinearLayout>
